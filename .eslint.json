{
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "jest": true,
    "es6": true
  },
  "extends": [
    "plugin:vue/recommended",
    "eslint:recommended",
    "prettier/vue",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "vue/component-name-in-template-casing": [
      "error",
      "PascalCase"
    ],
    "no-console": "off",
    "no-debugger": "off"
  },
  "globals": {
    "$nuxt": true
  },
  "parserOptions": {
    "parser": "babel-eslint"
  }
}