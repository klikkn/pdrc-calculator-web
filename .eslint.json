{
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "jest": true,
    "es6": true
  },
  "extends": [
    "plugin:vue/recommended",
    "eslint:recommended",
    "prettier/vue",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "vue/component-name-in-template-casing": [
      "error",
      "PascalCase"
    ],
    "no-console": "off",
    "no-debugger": "off"
  },
  "globals": {
    "$nuxt": true
  },
  "parserOptions": {
    "parser": "babel-eslint"
  },
  "overrides": [
    {
      "files": "*.svelte",
      "processor": "svelte3/svelte3",
      "extends": [
        "eslint:recommended"
      ],
      "plugins": [
        "svelte3"
      ],
      "rules": {
        "comma-dangle": [
          "error",
          "always-multiline"
        ],
        "indent": [
          "error",
          2,
          {
            "SwitchCase": 1
          }
        ],
        "no-console": "off",
        "prettier/prettier": [
          "off"
        ]
      }
    }
  ]
}